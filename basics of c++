#include<iostream>
using namespace std;
int main()
{
    int n;
    cout<<"Enter the number";
    cin>>n;
    if(n>0)
    {
        cout<<"The numner is positive";
    }
    else if (n<0)
    {
        cout<<"The number is negative";
    }
    else{
        cout<<"the number is zero";
    }
    
}

